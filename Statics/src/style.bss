// Default BUI style sheet

root {
  color: #000000;
  font: "Arial" plain 16;
  text-align: left;
}

label_point {
    color: #ffff00;
    font: "Arial" bold 24;
    
    text-effect: outline;
    effect-size: 3;
    effect-color: #000000cc;
}

label_measurement {
    color: #ffffff;
    font: "Arial" bold 18;
    
    text-effect: shadow;
    effect-color: #000000cc;
}

label_force {
    color: #ff0000;
    font: "Arial" bold 18;
    background: solid #88888888;
    padding: 2 2 2 2;    

    text-effect: outline;
    effect-color: #000000cc;
}

root:disabled {
  color: #888888;
}

