// Default BUI style sheet

root {
  color: #333333;
  font: "Dialog" plain 16;
}

root:disabled {
  color: #BBBBBB;
}

window {
  border: 1 solid #000000;
  //padding: 5;
}

info_window {
  border: 1 solid #000000;
  background: solid #aaaaaa88;
  padding: 5 5 5 5;
  //margin: 2 2 2 2;
}

decoratedwindow {
  border: 1 solid #FFFFFF;
}

popupmenu {
  background: solid #00000088;
//  padding: 5;
  border: 2 solid #FFFFFF;
  font: "Dialog" bold 16;
}

component {
}

component:disabled {
}

tooltip_window {
  background: solid #FFFFFF;
  border: 2 solid #000000;
  padding: 5;
}

tooltip_label {
  color: #000000;
}

label {
//  border: 1 solid #FFFFFF;
}

button {
  background: image "rsrc/textures/button_up.png" framexy;
  padding: 3 5;
  font: "Dialog" bold 15;
  text-align: center;
  //text-effect: outline;
  //effect-color: #442288;
}

menuitem {
  padding: 0 2;
}

menuitem:hover {
  color: #000000;
  background: solid #FFFFFF88;
}

button:hover {
  color: #FF00FF;
}

button:disabled {
  background: image "rsrc/textures/button_disabled.png" framexy;
}

button:down {
  background: image "rsrc/textures/button_down.png" framexy;
  color: #FF00FF;
  padding: 4 6 2 4;
}

button:selected {
  background: image "rsrc/textures/button_down.png" framexy;
  padding: 4 6 2 4;
}

combobox {
  background: image "rsrc/textures/button_up.png" framexy;
  padding: 3 5;
}

textfield {
  background: solid #ffffffff;
  padding: 5;
}

textarea {
  background: solid #ffffffff;
  padding: 5;
}

checkbox {
  icon: blank 7 7;
}

checkbox:selected {
  icon: image "rsrc/interfaceTextures/checkbox.png" centery;
}

checkbox:disselected {
  icon: image "rsrc/interfaceTextures/checkbox.png" centery;
}

scrollbar_hthumb {
  background: solid #FFFFFF;
}

scrollbar_vthumb {
  background: solid #FFFFFF;
}

scrollbar_hwell {
  background: image "rsrc/interfaceTextures/button_up.png" framexy;
  padding: 3;
}

scrollbar_vwell {
  background: image "rsrc/interfaceTextures/button_up.png" framexy;
  padding: 3;
}

scrollbar_hless {
  icon: image "rsrc/interfaceTextures/scroll_left.png";
}

scrollbar_vless {
  icon: image "rsrc/interfaceTextures/scroll_up.png";
}

scrollbar_hmore {
  icon: image "rsrc/interfaceTextures/scroll_right.png";
}

scrollbar_vmore {
  icon: image "rsrc/interfaceTextures/scroll_down.png";
}

hslider {
  icon: image "rsrc/interfaceTextures/button_up.png";
  border: 1 solid #000000;
}

vslider {
  icon: image "rsrc/interfaceTextures/button_up.png";
  border: 1 solid #000000;
}

//
// These are for testing

left {
  font: "Dialog" bold 16;
  text-align: left;
  text-effect: shadow;
  effect-color: #000000;
  vertical-align: top;
  border: 1 solid #FFCC99;
}

center {
  font: "Dialog" bold 16;
  text-align: center;
  text-effect: shadow;
  effect-color: #000000;
  vertical-align: center;
  border: 1 solid #FFCC99;
}

right {
  font: "Dialog" bold 16;
  text-align: right;
  text-effect: shadow;
  effect-color: #000000;
  vertical-align: bottom;
  border: 1 solid #FFCC99;
}
