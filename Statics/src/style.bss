application_bar {
    background: solid #000000;
    color: #ffffff;
    padding: 5;
}

application_tab {
    // background and text color are just defaults here, they are replaced in code
    background: solid #e9e9f4;
    color: #000000;
    padding: 3;
    font: "Dialog" bold 16;
}

application_popup {
    background: solid #ffffff;
    color: #000000;
    border: 2 solid #000000;
    padding: 5;
}

application_popup_title {
    background: solid #3d449b;
    color: #ffffff;
}

mode_title {
    background: solid #aaaaaa;
    color: #000000;
    padding: 2;
}

advice_box {
    background: solid #f0f0f0;
    color: #000000;
    padding: 5;
    //border: 4 solid #000000;
}

main_title {
    background: solid #292a67;
    color: #ffffff;
    font: "Dialog" bold 20;
    padding: 5 5 5 5;
}

menu_title_base {
    background: solid #3d449b;
    color: #ffffff;
    font: "Dialog" bold 16;
    padding: 2 2 2 2;
}

menu_item_base {
    background: solid #5e65ad;
    color: #ffffff;
    font: "Dialog" plain 16;
    padding: 2 2 2 2;
}

draggable_title {
    background: solid #3d449b;
    color: #ffffff;
    font: "Dialog" bold 16;
    padding: 2 2 2 2;
}

content_container {
    padding: 5 5 5 5;
    text-align: left;
}

